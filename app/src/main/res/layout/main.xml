<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Totorial">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colordeFondo"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/encabezado"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tamanoDeTextoVertical"
            android:background="#000000"
            android:gravity="center"
            android:text="@string/encabezado"
            android:textColor="@color/colorTexto"
            android:textSize="@dimen/tamanoDeTextoEncabezado" />

        <ImageButton
            android:id="@+id/boton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/textoBoton"
            android:onClick="accionBoton"
            android:scaleType="fitXY"
            android:src="@drawable/boton" />
		
		

        <ImageButton
            android:id="@+id/boton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/textoBoton"
            android:onClick="accionBoton"
            android:scaleType="fitXY"
            android:src="@drawable/boton1" />
		
		<ImageButton
            android:id="@+id/boton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/textoBoton"
            android:onClick="accionBoton"
            android:scaleType="fitXY"
            android:src="@drawable/boton2" />



    </LinearLayout>

    <TextView
        android:id="@+id/pieDePagina"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tamanoDeTextoVertical"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:gravity="center"
        android:text="@string/pieDePagina"
        android:textColor="@color/colorTexto"
        android:textSize="@dimen/tamanoDeTextoPieDePagina" />






</RelativeLayout>
